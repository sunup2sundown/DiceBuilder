<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3f7ee2" />
            <gradient android:angle="-90" android:startColor="#2d5aa3" android:endColor="#376ec6"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3f7ee2" />
            <solid android:color="#376ec6"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3f7ee2" />
            <gradient android:angle="-90" android:startColor="#4283ed" android:endColor="#376ec6" />
        </shape>
    </item>
</selector>